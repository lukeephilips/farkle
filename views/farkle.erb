<form action="/" method="post">
  <div class="row gameboard">
    <div class="col-sm-6 play">
      <div class="player">
        <h2>Player: <%= @player.id %></h2>
      </div>
      <div class="active-dice">
        <% if @player.active_dice %>
          <h3>Active Dice: </h3>
          <% @player.active_dice.each.with_index do |die, index| %>
            <label class="dice">
              <input type="checkbox" name="active_dice" id="<%= index %>" value = "<%= die %>"><%= die %>
            </label>
          <% end %>
          <h3>Active Dice Score: </h3>
          <span id="active_dice_score"> <%= @player.score(@player.active_dice) %></span>
        <% end %>
      </div>

      <div class="frozen-dice">
        <h3>Frozen Dice: </h3><span id="frozen_dice_array"><%= @player.frozen_dice %></span>
      </div>
    </div>
    <div class="col-sm-6 scoring">
      <div class="score">
        <h3>Frozen Score in Hand: </h3><span id="frozen_dice_score"><%=@player.score(@player.frozen_dice) %></span>
      </div>
        <div class="bank">
          <% if @player.banked != (0) %>
            <h3>Banked Score: </h3><span id="banked_score"><%= @player.banked %></span>
          <% end %>
        </div>
      <div class="Strikes">
        <h3>Strikes: </h3><span id="strikes"><%= @player.strikes %></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <div class="method">
        <select class="form-control" name="method">
          <option value="freeze">Freeze</option>
          <option value="bank">Bank</option>
        </select>
      </div>
    </div>
    <div class="col-sm-1">
      <button type="submit" class="btn btn-success">Go!</button>
      <a href="/roll"><button type="button" class="btn btn-danger">Roll</button></a>
    </div>
    <div class="message">
      <h3 id="message"><%= @player.message %></h3>
    </div>
</div>
</form>
