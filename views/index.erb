

<form action="/farkle" method="post">
  <div class="form-group">

  <label for="player-count">How many players?</label>
    <select class="form-control" name="player-count">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
    </select>
  </div>
  <div class="form-group">
    <input type="text" name="player1" placeholder="Player 1 name" class="form-control">
    <label for="player2"></label>
    <input type="text" name="player2" placeholder="Player 2 name" class="form-control">
    <button type="submit" class="btn btn-danger">Play</button>
  </div>
</form>
